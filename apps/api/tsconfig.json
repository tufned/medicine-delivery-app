{
  "extends": "@mda/typescript-config/node-library.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./dist/.tmp/tsconfig.tsbuildinfo",
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__/**",
    "src/**/tests/**",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
